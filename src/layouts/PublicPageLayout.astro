---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = "StashTracker" } = Astro.props as Props;
---

<Layout title={title}>
  <main class="min-h-svh bg-gradient-to-br from-background to-muted/40 text-foreground">
    <div
      class="mx-auto flex w-full max-w-5xl flex-col gap-10 px-4 py-16 md:flex-row md:items-center md:justify-between md:gap-16"
    >
      {
        Astro.slots.has("hero") && (
          <section class="max-w-xl space-y-4">
            <slot name="hero" />
          </section>
        )
      }

      <section class="w-full max-w-md">
        <slot />
      </section>
    </div>
  </main>
</Layout>

<!--
  The public page layout wraps unauthenticated flows with a centered container.
  It expects the main interactive module to be provided via the default slot.
-->
