---
import Layout from "../layouts/Layout.astro";
import { Card, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
---

<Layout title="StashTracker - Track Your Expenses and Savings">
  <main
    class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 dark:from-slate-950 dark:via-blue-950 dark:to-indigo-950"
  >
    <!-- Hero Section -->
    <section class="container mx-auto px-4 py-16 sm:py-24">
      <div class="max-w-4xl mx-auto text-center space-y-8">
        <div class="space-y-4">
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight text-slate-900 dark:text-slate-50">
            Control your finances
            <span
              class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400"
            >
              with simplicity
            </span>
          </h1>
          <p class="text-lg sm:text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
            StashTracker is a lightweight app for tracking everyday expenses and savings in PLN. No unnecessary
            complications, no bank integrations - just you and your finances.
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col gap-6 justify-center items-center pt-8">
          <a
            href="/register"
            class="inline-flex items-center justify-center w-full sm:w-auto text-xl sm:text-2xl px-12 py-8 rounded-lg shadow-2xl hover:shadow-3xl transition-all hover:scale-105 font-bold bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2"
          >
            Get Started Free →
          </a>
          <p class="text-base sm:text-lg text-slate-600 dark:text-slate-400 font-medium">
            No credit card required • Free forever
          </p>
          <div class="flex flex-col gap-3 items-center">
            <p class="text-slate-600 dark:text-slate-400">Already have an account?</p>
            <a
              href="/login"
              class="inline-flex items-center justify-center px-10 py-4 rounded-lg shadow-lg hover:shadow-xl transition-all hover:scale-105 font-semibold text-lg bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-green-500 focus-visible:ring-offset-2"
            >
              Log In
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="container mx-auto px-4 py-16">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl sm:text-4xl font-bold text-center mb-12 text-slate-900 dark:text-slate-50">
          Everything you need
        </h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Feature 1: Stashes -->
          <Card>
            <CardHeader>
              <div class="w-12 h-12 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center mb-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-blue-600 dark:text-blue-400"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                  ></path>
                </svg>
              </div>
              <CardTitle>Manage Stashes</CardTitle>
              <CardDescription>
                Create separate stashes for different savings goals. Add and withdraw funds with simple transaction
                descriptions.
              </CardDescription>
            </CardHeader>
          </Card>

          <!-- Feature 2: Expenses -->
          <Card>
            <CardHeader>
              <div
                class="w-12 h-12 rounded-lg bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center mb-4"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-indigo-600 dark:text-indigo-400"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2zM10 8.5a.5.5 0 11-1 0 .5.5 0 011 0zm5 5a.5.5 0 11-1 0 .5.5 0 011 0z"
                  ></path>
                </svg>
              </div>
              <CardTitle>Track Expenses</CardTitle>
              <CardDescription>
                Record expenses with categories and descriptions. Set a monthly budget and monitor your spending in
                real-time.
              </CardDescription>
            </CardHeader>
          </Card>

          <!-- Feature 3: Privacy -->
          <Card>
            <CardHeader>
              <div
                class="w-12 h-12 rounded-lg bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center mb-4"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-purple-600 dark:text-purple-400"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                  ></path>
                </svg>
              </div>
              <CardTitle>Privacy First</CardTitle>
              <CardDescription>
                Your financial data stays yours. Full control over your account with the ability to delete all data at
                any time.
              </CardDescription>
            </CardHeader>
          </Card>

          <!-- Feature 4: Simple -->
          <Card>
            <CardHeader>
              <div class="w-12 h-12 rounded-lg bg-green-100 dark:bg-green-900/30 flex items-center justify-center mb-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-green-600 dark:text-green-400"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"
                  ></path>
                </svg>
              </div>
              <CardTitle>Fast & Simple</CardTitle>
              <CardDescription>
                No unnecessary features, no complicated integrations. Just what you need to control your personal
                finances.
              </CardDescription>
            </CardHeader>
          </Card>

          <!-- Feature 5: Responsive -->
          <Card>
            <CardHeader>
              <div
                class="w-12 h-12 rounded-lg bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center mb-4"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-orange-600 dark:text-orange-400"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <CardTitle>Available Everywhere</CardTitle>
              <CardDescription>
                Responsive interface adapted to any device. Manage your finances on desktop, tablet, or phone.
              </CardDescription>
            </CardHeader>
          </Card>

          <!-- Feature 6: PLN Only -->
          <Card>
            <CardHeader>
              <div class="w-12 h-12 rounded-lg bg-red-100 dark:bg-red-900/30 flex items-center justify-center mb-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-6 h-6 text-red-600 dark:text-red-400"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <CardTitle>PLN Only</CardTitle>
              <CardDescription>
                Focused on the Polish market. All amounts in Polish złoty, without currency exchange complications.
              </CardDescription>
            </CardHeader>
          </Card>
        </div>
      </div>
    </section>
  </main>
</Layout>
